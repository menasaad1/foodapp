generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "rhel-openssl-3.0.x", "rhel-openssl-1.0.x", "debian-openssl-1.1.x", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum PaymentStatus {
  PENDING
  COMPLETED
  FAILED
  REFUNDED
}

enum PaymentProvider {
  STRIPE
  CASH_ON_DELIVERY
  WALLET
}

model Payment {
  id              String          @id @default(uuid())
  orderId         String // Foreign key to Order Service (loose coupling)
  amount          Decimal
  currency        String          @default("AED")
  status          PaymentStatus   @default(PENDING)
  provider        PaymentProvider
  transactionId   String?         @unique // External Gateway ID
  
  userEmail       String?         // Snapshot for receipt
  
  createdAt       DateTime        @default(now())
  updatedAt       DateTime        @updatedAt

  invoice         Invoice?
}

model Invoice {
  id          String   @id @default(uuid())
  paymentId   String   @unique
  payment     Payment  @relation(fields: [paymentId], references: [id])
  url         String?  // PDF URL
  createdAt   DateTime @default(now())
}
